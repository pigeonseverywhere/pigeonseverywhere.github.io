a {
  font-weight: 500;
  text-decoration: inherit;
}

body {
  margin: 0;
  /* padding: 1rem 0rem 1rem 0rem; */
  display: flex;
  place-items: center;
  /* transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out; */
}

h1 {
  font-size: 3.2em;
  line-height: 1.1;
}

.dim {
  filter: brightness(0.75)
}


#app {
  width: 100%;
  height: 100%;
  text-align: left;
}

button {
  border-radius: 8px;
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-size: 1em;
  font-weight: 500;
  font-family: inherit;
  background-color: #1a1a1a;
  cursor: pointer;
  transition: border-color 0.25s;
}

button:focus,
button:focus-visible {
  outline: 4px auto -webkit-focus-ring-color;
}

@media (prefers-color-scheme: light) {
  /* :root {
    color: #213547;
    background-color: #ffffff;
  } */
  .dim {
    color: #9ca3af
  }
}

.toggleThemeButton {
  @apply text-text focus:outline-none active:outline-none hover:scale-110 transition-all font-medium rounded-lg text-sm p-1 text-center inline-flex items-center mr-2;
}



